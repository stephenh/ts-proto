{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2018"],
    "module": "commonjs",
    "strict": true,
    "outDir": "build",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "declaration": true,
    "resolveJsonModule": true,
    "paths": {
      // For all code in src and integration, redirect imports from
      // the npm package to the local sources.
      "ts-proto-descriptors": ["./protos/index.ts"]
    }
  },
  "include": ["src"]
}
