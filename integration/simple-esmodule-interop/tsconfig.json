{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2018"],
    "module": "commonjs",
    "strict": true,
    "outDir": "build",
    // Users aren't guaranteed to have this true, so leave it false
    "skipLibCheck": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["./"]
}
